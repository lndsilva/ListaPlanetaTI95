<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtUm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primeiro texto"
        android:textColor="#E91E63" />

    <TextView
        android:id="@+id/txtDois"
        android:layout_toRightOf="@+id/txtUm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Segundo Texto"
        android:textColor="#00BCD4" />

    <TextView
        android:layout_below="@+id/txtUm"
        android:id="@+id/txtTres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terceiro texto"
        android:textColor="#009688" />

    <TextView
        android:layout_toRightOf="@+id/txtTres"
        android:layout_below="@+id/txtDois"
        android:id="@+id/txtQuatro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quarto Texto"
        android:textColor="#FF9800" />

</RelativeLayout>