<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgTerra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/terra" />

    <ImageView
        android:id="@+id/imgPlutao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgTerra"
        android:src="@drawable/plutao" />

    <ImageView
        android:id="@+id/imgMarte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgPlutao"
        android:src="@drawable/marte" />

    <ImageView
        android:id="@+id/imgNetuno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgMarte"
        android:layout_toRightOf="@id/imgMarte"
        android:src="@drawable/netuno" />

</RelativeLayout>